
@using CapstoneProject.Entities
@model Client

@{
    ViewData["Title"] = "Delete Client";
}

<h6>Confirm Deletion</h6>
<h3>@Model.ClientName</h3>

<form asp-controller="Class" asp-action="DeleteClient" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="ClientId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Class" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
