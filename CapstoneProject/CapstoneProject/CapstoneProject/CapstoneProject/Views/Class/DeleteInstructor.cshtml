
@using CapstoneProject.Entities
@model Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<h6>Confirm Deletion</h6>
<h3>@Model.InstructorName</h3>

<form asp-controller="Class" asp-action="DeleteInstructor" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="InstructorId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Class" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
